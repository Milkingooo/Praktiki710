<Window x:Class="WpfApp7.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ListView x:Name="lv2" Height="300" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="70" Width="150" VerticalAlignment="Bottom" Content="Обновить" Margin="10,0,10,0" Click="Button_Click"/>
            <Button Height="70" Width="150" VerticalAlignment="Bottom" Content="Очистить список" Margin="10,0,10,0" Click="Button_Click_1"/>
            <Button Height="70" Width="150" VerticalAlignment="Bottom" Content="Очистить файл" Margin="10,0,10,0" Click="Button_Click_3"/>
            <Button Height="70" Width="150" VerticalAlignment="Bottom" Content="Выгрузить" Margin="10,0,10,0" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</Window>
